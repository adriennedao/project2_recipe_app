<%= form_for @recipe do |f| %>

 <div class="field form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="field form-group">
  <%= f.label :body %><br>
  <%= f.text_area :body, class: 'form-control' %>
</div>

<div class="actions form-group">
  <%= f.submit %>
</div>
<% end %>
